
<% include login_create_background.ejs %>
	
<title>Login</title>

<div class="container">
	<div class="row vertical-offset-100">
		<div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-1 col-md-offset-2">
			<div class="well">
				<form role="form" method="post" action="/propertyList">
					<h2>Please Login</h2>
					<hr class="colorgraph">	
					<% if (error) { %>
    					<div class="alert alert-danger"><%= error %></div>
    				<% } %>
					
					<div class="form-group">
						<input type="email" name="email" id="email" class="form-control input-lg" placeholder="User Name" tabindex="1" required>
					</div>						
					<div class="form-group">
						<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="1" required>
					</div>
					
					<a href="" class="btn btn-link">Forgot Password?</a>				
					<div class="row">
						<div class="col-xs-6 col-sm-6 col-md-6">
                    		<input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
						</div>
						<div class="col-xs-6 col-sm-6 col-md-6">
							<a href="/create_account" class="btn btn-lg btn-primary btn-block">Register</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
